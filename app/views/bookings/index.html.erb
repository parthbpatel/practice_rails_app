<p id="notice"><%= notice %></p>

<h1>Your Bookings</h1>

<table border="2">
    <tr>
      <th>Customer</th>
      <th>Cleaner</th>
      <th>Date</th>
    </tr>

    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customer.first_name %></td>
        <td><%= booking.cleaner.first_name %></td>
        <td><%= booking.date %></td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'New Booking', new_customer_booking_path %>
