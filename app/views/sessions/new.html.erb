<% provide(:title, "Log in") %>

<div class="row">

  <div class="col-md-4 col-md-offset-4">

    <h1>Log in</h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :first_Name %><br>
      <%= f.text_field :first_name, class: 'form-control' %><br>
      <%= f.label :phone_Number %><br>
      <%= f.text_field :phone_number, class: 'form-control' %><br>
      <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %><br>
    <% end %><br>
    <%= link_to 'Create Account', new_customer_path, :class => "btn btn-secondary" %>

  </div>

</div>
